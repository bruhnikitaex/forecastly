# ==============================================================================
# Forecastly Environment Configuration
# ==============================================================================
# Скопируйте этот файл в .env и настройте значения под свое окружение
# cp .env.example .env

# ==============================================================================
# APPLICATION SETTINGS
# ==============================================================================

# Окружение: development, production
ENVIRONMENT=development

# Secret key для JWT токенов (ОБЯЗАТЕЛЬНО изменить в production!)
SECRET_KEY=forecastly-dev-secret-key-change-in-production-2024

# ==============================================================================
# DATABASE SETTINGS
# ==============================================================================

# Использовать базу данных (true/false)
USE_DATABASE=false

# PostgreSQL connection settings (если USE_DATABASE=true)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=forecastly
POSTGRES_USER=forecastly
POSTGRES_PASSWORD=your_secure_password_here

# Database URL (автоматически формируется, но можно переопределить)
# DATABASE_URL=postgresql://forecastly:password@localhost:5432/forecastly

# ==============================================================================
# API SETTINGS
# ==============================================================================

# CORS разрешенные origins (через запятую)
CORS_ORIGINS=http://localhost:3000,http://localhost:8501

# Rate limiting
RATE_LIMIT=100/minute
AUTH_RATE_LIMIT=5/minute

# ==============================================================================
# LOGGING SETTINGS
# ==============================================================================

# Уровень логирования: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Формат логов: text, json
LOG_FORMAT=text

# Директория для логов
LOG_DIR=logs

# ==============================================================================
# JWT SETTINGS
# ==============================================================================

# Время жизни access token (в минутах)
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Время жизни refresh token (в днях)
REFRESH_TOKEN_EXPIRE_DAYS=7

# ==============================================================================
# SECURITY SETTINGS
# ==============================================================================

# Максимальное количество попыток входа
MAX_LOGIN_ATTEMPTS=5

# Время блокировки после превышения попыток (в минутах)
LOCKOUT_DURATION_MINUTES=15

# ==============================================================================
# MODEL SETTINGS
# ==============================================================================

# Горизонт прогнозирования по умолчанию (в днях)
DEFAULT_FORECAST_HORIZON=14

# Максимальный горизонт прогнозирования
MAX_FORECAST_HORIZON=120

# ==============================================================================
# FILE UPLOAD SETTINGS
# ==============================================================================

# Максимальный размер загружаемого файла (в MB)
MAX_UPLOAD_SIZE_MB=100

# Разрешенные форматы файлов
ALLOWED_FILE_FORMATS=csv,xlsx

# ==============================================================================
# MONITORING SETTINGS
# ==============================================================================

# Prometheus metrics endpoint enabled
METRICS_ENABLED=true

# Health check endpoint enabled
HEALTH_CHECK_ENABLED=true

# ==============================================================================
# DEVELOPMENT SETTINGS
# ==============================================================================

# Включить hot reload
RELOAD=true

# Включить debug mode
DEBUG=false

# Показывать SQL запросы
SQL_ECHO=false

# ==============================================================================
# EXTERNAL SERVICES (optional)
# ==============================================================================

# Redis URL (для кэширования, опционально)
# REDIS_URL=redis://localhost:6379/0

# Sentry DSN (для error tracking, опционально)
# SENTRY_DSN=https://your-sentry-dsn

# ==============================================================================
# NOTES
# ==============================================================================
# 1. НИКОГДА не коммитьте .env файл с реальными паролями в git!
# 2. В production обязательно измените SECRET_KEY
# 3. Используйте сильные пароли для POSTGRES_PASSWORD
# 4. Для production установите USE_DATABASE=true
# 5. Настройте CORS_ORIGINS для ваших доменов
